<!DOCTYPE html>
<head></head>
<body>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <div>
          <%= flash[:notice] %>
        </div>
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th>
                  <%= @user.name %>
                </th>
              </tr>
              <tr>
                <th>introduction</th>
                <th>
                  <%= @user.introduction %>
                </th>
              </tr>
            </tbody>
          </table>
          <% if @user == current_user %>
            <div class='row'>
              <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %> <i class="fas fa-user-cog"></i>
                <% end %>
                  <% end %>
            </div>
            <h1>New book</h1>
            <%= form_with model: @book do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>
                <h4>Opinion</h4>
                <%= f.text_area :body %>
                  <%= f.submit 'Create Book' %>
                    <% end %>
      </div>
      <main>
        <div class='col-md-8 offset-md-1'>
          <h1>Book detail</h1>
          <% @books.each do |book| %>
            <table class= "table">
              <tbody>
                <tr>
                  <td>
                    <%= image_tag 'no_image.jpg' %>
                  </td>
                  <td>
                    <%= link_to book.title, book_path(book.id) %>
                  </td>
                  <td>
                    <%= book.body %>
                  </td>
                  <td>
                    <div class="actions">
                      <input type="submit" name="commit" value="Edit" class="btn btn-sm btn-primary" data-disable-with="Edit">
                    </div>
                  </td>
                </tr>
                <tr>
                  <td><%= @user.name %></td>
                </tr>
              </tbody>
            </table>
            </div>
            <% end %>
      </main>
      </div>
    </div>
    </div>
  </div>
</body>