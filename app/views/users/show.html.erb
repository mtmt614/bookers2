
<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h4>name   <%= @user.name %></h4>
  <h4>introduction  <%= @user.introduction %></h4>
  <% if @user == current_user %>
  <p><%= link_to "User info", edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Book detail</h1>
  <% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
  <% end %>
  <p><%= image_tag 'no_image.jpg' %></p>
  <p><%= link_to book.title, book_path(book.id) %></p>
  <p><%= book.body %></p>
  <p><%= book.user.name %></p>
</div>
<% end %>
