<div class='col-md-3'>
        <div>
          <%= flash[:notice] %>
        </div>
        <h2>User info</h2>
        <%= image_tag user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th>
                  <%= user.name %>
                </th>
              </tr>
              <tr>
                <th>introduction</th>
                <th>
                  <%= user.introduction %>
                </th>
              </tr>
            </tbody>
          </table>
          <% if user == current_user %>
            <div class='row'>
              <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %> <i class="fas fa-user-cog"></i>
                <% end %>
                  <% end %>
            </div>
            <h2 class="mt-3">New book</h2>
            <%= form_with model: book do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <input class="form-control book_title" type="text" name="book[title]" id="book_title">
            </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
            </div>
            <div class="form-group">
              <%= f.submit 'Create Book',class:"btn btn-success" %>
              <% end %>
            </div>
          </div>