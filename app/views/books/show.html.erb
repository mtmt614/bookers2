<!DOCTYPE html>
    <p id= "notice"></p>
  <div class='container'>
    <div class='row'>

      <%= render 'userinfo', book: @book, user: @user %>

        <div class='col-md-8 offset-md-1'>

          <h2>Book detail</h2>
            <table class= "table">
              <tbody>
                <tr>
                  <td>
                    <%= image_tag 'no_image.jpg' %>
                    <br>
                    <%= link_to @user.name, book_path(@user) %>
                  </td>
                  <td>
                    <%= link_to @book.title, book_path(@book) %>
                  </td>
                  <td>
                    <%= @book.body %>
                  </td>
                  <td>
                    <%= link_to edit_book_path(@book), class:"btn btn-success" do %> Edit
                    <% end %>
                  </td>
                  <td>
                    <%= link_to book_path(@book), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に削除しますか？" do %> destroy
                    <% end %>
                  </td>
                </tr>
              </tbody>
            </table>
            </div>
            </div>
          </div>
      </div>