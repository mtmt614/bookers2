<!DOCTYPE html>
    <p id= "notice"></p>
  <div class='container'>
    <div class='row'>

      <%= render 'userinfo', book: @books, user: @user %>

        <div class='col-md-8 offset-md-1'>

          <h2>Book detail</h2>
            <table class= "table">
              <tbody>
                <tr>
                  <td>
                    <%= image_tag @book.user.get_profile_image(80,80) %>
                    <br>
                    <%= link_to @user.name, book_path(@book.id) %>
                  </td>
                  <td>
                    <%= link_to @book.title, book_path(@book) %>
                  </td>
                  <td>
                    <%= @book.body %>
                  </td>
                  <td>
                    <% if @book.user == current_user %>
                    <%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %>
                    <% end %>
                  </td>
                  <td>
                    <% if @book.user == current_user %>
                      <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
                    <% end %>
                  </td>
                </tr>
              </tbody>
            </table>
            </div>
            </div>
          </div>
      </div>