<!DOCTYPE html>
    <p id= "notice"></p>
  <div class='container'>
    <div class='row'>
      <div class='col-md-3'>
        <div>
          <%= flash[:notice] %>
        </div>
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th>
                  <%= @user.name %>
                </th>
              </tr>
              <tr>
                <th>introduction</th>
                <th>
                  <%= @user.introduction %>
                </th>
              </tr>
            </tbody>
          </table>
          <% if @user == current_user %>
            <div class='row'>
              <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %> <i class="fas fa-user-cog"></i>
                <% end %>
                  <% end %>
            </div>
            <h2>New book</h2>
            <%= form_with model: @book do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>
                <h4>Opinion</h4>
                <%= f.text_area :body %>
                  <%= f.submit 'Create Book' %>
                    <% end %>
      </div>
        <div class='col-md-8 offset-md-1'>
          <h2>Book detail</h2>
            <table class= "table">
              <tbody>
                <tr>
                  <td>
                    <%= image_tag 'no_image.jpg' %>
                    <br>
                    <%=link_to @user.name %>
                  </td>
                  <td>
                    <%= link_to @book.title, book_path(@book) %>
                  </td>
                  <td>
                    <%= @book.body %>
                  </td>
                  <td>
                    <%= link_to edit_book_path(@book), class:"btn btn-success" do %> Edit
                    <% end %>
                  </td>
                  <td>
                    <%= link_to book_path(@book), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に削除しますか？" do %> destroy
                    <% end %>
                  </td>
                </tr>
              </tbody>
            </table>
            </div>
      </div>
    </div>
  </div>